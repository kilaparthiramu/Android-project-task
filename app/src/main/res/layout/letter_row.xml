<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvSingleUser"
    app:cardElevation="4dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_scheme_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="7dp"
                android:text="Scheme Name:"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/txt_view_scheme_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_scheme_name"
                android:layout_toEndOf="@+id/txt_scheme_name"
                android:layout_toRightOf="@+id/txt_scheme_name"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="7dp"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/txt_date_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_view_scheme_name"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:text="Date Of Upload :"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/txt_view_date_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_date_upload"
                android:layout_toEndOf="@+id/txt_date_upload"
                android:layout_toRightOf="@+id/txt_date_upload"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/txt_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_date_upload"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:text="Version :"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/txt_view_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_version"
                android:layout_toEndOf="@id/txt_version"
                android:layout_toRightOf="@+id/txt_version"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/txt_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_version"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:text="Description :"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/txt_view_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="djksaHKDJASHDKJHKSDKASDHKJSADSADJS ASHSJDJHASHD ASJHDJSAU KABHJDYHGASD BSAGDIAS DASJHDGASDHJD"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_below="@+id/txt_view_version"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/txt_description"
                android:layout_toRightOf="@+id/txt_description" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="view"
                android:id="@+id/button_view"
                android:layout_marginRight="61dp"
                android:layout_marginEnd="25dp"
                android:layout_below="@+id/txt_view_description"
                android:layout_alignRight="@+id/txt_view_description"
                android:layout_alignEnd="@+id/txt_view_description" />

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
